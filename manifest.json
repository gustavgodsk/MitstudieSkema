{
    "browser_specific_settings": {
        "gecko": {
            "id": "DAT2 Extension",
            "strict_min_version": "58.0"
        }
    },
    "manifest_version": 3,
    "name": "DAT2 Extension",
    "version": "1.1",
    "description": "Farvekoordineret skema for Mitstudie",
    "action": {
        "default_icon": "icons/dolph.jpg"
    },
    "permissions": ["storage"],
    "content_scripts": [
        {
            "js": [
                "config/config.default.js",
                "config/config.loader.js",
                "scripts/mitstudie.js"
            ],
            "matches": ["https://mitstudie.au.dk/*"]
        },
        {
            "js": [
                "config/config.default.js",
                "config/config.loader.js",
                "scripts/panopto.js"
            ],
            "matches": ["https://au.cloud.panopto.eu/Panopto/Pages/*"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    }
}
