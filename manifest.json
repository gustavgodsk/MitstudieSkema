{
    "browser_specific_settings": {
        "gecko": {
            "id": "@DAT2AU",
            "strict_min_version": "142.0",
            "data_collection_permissions": {
                "required": ["none"]
            }
        }
    },
    "manifest_version": 3,
    "name": "DAT2AU",
    "version": "1.2",
    "description": "Quality of Life improvements til datalogistuderende p√• AU",
    "action": {
        "default_icon": {
            "16": "static/icons/icon16.png",
            "32": "static/icons/icon32.png"
        }
    },
    "icons": {
        "16": "static/icons/icon16.png",
        "32": "static/icons/icon32.png",
        "48": "static/icons/icon48.png",
        "128": "static/icons/icon128.png"
    },
    "permissions": ["storage"],
    "content_scripts": [
        {
            "js": [
                "config/config.default.js",
                "config/config.loader.js",
                "scripts/mitstudie.js"
            ],
            "matches": ["https://mitstudie.au.dk/*"]
        },
        {
            "js": [
                "config/config.default.js",
                "config/config.loader.js",
                "scripts/panopto.js"
            ],
            "matches": ["https://au.cloud.panopto.eu/Panopto/Pages/*"]
        }
    ],
    "background": {
        "service_worker": "options/background.js",
        "scripts": ["options/background.js"]
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    }
}
