{
    "browser_specific_settings": {
        "gecko": {
            "id": "DAT2 Extension",
            "strict_min_version": "58.0"
        }
    },
    "manifest_version": 3,
    "name": "DAT2 Extension",
    "version": "1.1",
    "description": "Quality of Life improvements til datalogi p√• AU",
    "action": {
        "default_icon": {
            "16": "icons/dolph_16.png",
            "32": "icons/dolph_32.png"
        }
    },
    "icons": {
        "16": "icons/dolph_16.png",
        "32": "icons/dolph_32.png",
        "48": "icons/dolph_48.png",
        "128": "icons/dolph_128.png"
    },
    "permissions": ["storage"],
    "content_scripts": [
        {
            "js": [
                "config/config.default.js",
                "config/config.loader.js",
                "scripts/mitstudie.js"
            ],
            "matches": ["https://mitstudie.au.dk/*"]
        },
        {
            "js": [
                "config/config.default.js",
                "config/config.loader.js",
                "scripts/panopto.js"
            ],
            "matches": ["https://au.cloud.panopto.eu/Panopto/Pages/*"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    }
}
